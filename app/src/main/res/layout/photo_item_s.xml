<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="130dp" android:layout_margin="1dp" app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:id="@+id/card_view" app:cardCornerRadius="8dp"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/photo_item"
                android:scaleType="fitXY" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="sample_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tags"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
                android:textColor="@color/cardview_light_background" android:textStyle="bold"/>
        <TextView
                android:text="Likes:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/likes_label" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textColor="@color/cardview_light_background"
                android:textStyle="bold"/>
        <TextView
                android:text="Favorites:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/favorite_label" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/likes" android:layout_marginStart="8dp"
                android:textColor="@color/cardview_light_background" android:textStyle="bold"/>
        <TextView
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/likes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/likes_label" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" android:textColor="@color/cardview_light_background"
                android:textStyle="bold"/>
        <TextView
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/favorites"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/favorite_label"
                android:layout_marginStart="8dp" android:textColor="@color/cardview_light_background"
                android:textStyle="bold"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
